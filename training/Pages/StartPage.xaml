<Page x:Class="training.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:training.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="450" MinWidth="600"
      Title="StartPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition MinWidth="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MinHeight="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="Логин"/>
            <TextBox Margin="20" Name="LoginTB"/>
            <Label Content="Пароль"/>
            <TextBox Margin="20" Name="PasswordTB"/>
            <Button Grid.Column="1" Grid.Row="1" Content="Войти" Width="75" Click="Button_Click"/>
            <TextBlock HorizontalAlignment="Right" Text="Войти как гость" MouseLeftButtonDown="GuestEntry" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
